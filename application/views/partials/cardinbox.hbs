{{!-- For styling the messages in the "Inbox" tab (mypage.hbs) --}}
<div class="card" style="margin:5px">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <div class="p-2">From: {{username}}</div>
            <div class="p-2">{{created}}</div>
        </div>
        <div class="p-2">Post name: <a id="card-details" href="/post/{{id}}">{{title}}</a></div>
        <div class="p-2">Message: {{message}}</div>
    </div>
</div>