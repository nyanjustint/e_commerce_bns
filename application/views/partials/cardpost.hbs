{{!-- For styling the user's active posts in the "Posts" tab where they are able to delete their posts (mypage.hbs) --}}
<div id="post-card" class="card">
    <a href="/post/{{id}}">
        <img class="card-img" src="/{{photopath}}" style="height: 250px; margin-top: -10px;" alt="Missing Image">
    </a>
    <div class="card-body">
        <a id="card-details" href="/post/{{id}}">
            <h6 id="card-title" class="card-title">{{title}}</h6>
        </a>
        <div id="card-price" class="card-price">${{price}}</div>
    </div>
    <button type="button" id="delete-button" class="btn" data-toggle="modal" data-target="#contact-{{id}}">Delete</button>

    <div class="modal fade" id="contact-{{id}}">
        <form id="createmessage-form" class="modal-dialog modal-dialog-centered" method="POST"
            enctype="application/x-www-form-urlencoded" action='/posts/delete'>
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Post<br></h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6 class="text-center">Are you sure you want to delete this post? : {{title}}</h6>
                    <input name="postId" type="hidden" value="{{id}}" class="form-control">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button type="submit" id="submit-message" class="btn">Yes</button>
                </div>
            </div>
        </form>
    </div>
</div>